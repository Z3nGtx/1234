#include <stdio.h>

int findLRU(int time[], int f) {
    int min = time[0], pos = 0;
    for (int i = 1; i < f; i++)
        if (time[i] < min) { min = time[i]; pos = i; }
    return pos;
}

int main() {
    int n, f, faults = 0, counter = 0;
    printf("Enter number of pages: ");
    scanf("%d", &n);
    int pages[n];
    printf("Enter page reference string: ");
    for (int i = 0; i < n; i++) scanf("%d", &pages[i]);
    printf("Enter number of frames (min 3): ");
    scanf("%d", &f);

    int frame[f], time[f];
    for (int i = 0; i < f; i++) { frame[i] = -1; time[i] = 0; }

    printf("\nLRU Page Replacement:\n");
    for (int i = 0; i < n; i++) {
        int hit = 0;
        for (int j = 0; j < f; j++) {
            if (frame[j] == pages[i]) {
                hit = 1;
                time[j] = ++counter;  // update last used time
            }
        }

        if (!hit) {
            int pos = -1;
            for (int j = 0; j < f; j++)
                if (frame[j] == -1) { pos = j; break; }

            if (pos == -1) pos = findLRU(time, f);
            frame[pos] = pages[i];
            time[pos] = ++counter;
            faults++;
        }

        printf("Page %d -> ", pages[i]);
        for (int j = 0; j < f; j++)
            if (frame[j] != -1) printf("%d ", frame[j]);
        printf(hit ? "(Hit)\n" : "(Miss)\n");
    }

    printf("Total Page Faults = %d\n", faults);
    return 0;
}
