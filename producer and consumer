#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>
#include <unistd.h>

#define SIZE 5  // buffer size
int buffer[SIZE], in = 0, out = 0;
sem_t empty, full;       // counting semaphores
pthread_mutex_t mutex;   // for critical section

void* producer(void* arg) {
    int item;
    for (int i = 1; i <= 5; i++) {
        item = i;
        sem_wait(&empty);            // wait for empty slot
        pthread_mutex_lock(&mutex);  // enter critical section

        buffer[in] = item;
        printf("ðŸ³ Producer produced item %d\n", item);
        in = (in + 1) % SIZE;
        sleep(1);

        pthread_mutex_unlock(&mutex);
        sem_post(&full);             // signal full slot
    }
    return NULL;
}

void* consumer(void* arg) {
    int item;
    for (int i = 1; i <= 5; i++) {
        sem_wait(&full);             // wait for available item
        pthread_mutex_lock(&mutex);

        item = buffer[out];
        printf("ðŸ½ï¸ Consumer consumed item %d\n", item);
        out = (out + 1) % SIZE;
        sleep(1);

        pthread_mutex_unlock(&mutex);
        sem_post(&empty);            // signal empty slot
    }
    return NULL;
}

int main() {
    pthread_t prod, cons;

    sem_init(&empty, 0, SIZE);  // initially all slots empty
    sem_init(&full, 0, 0);      // no items initially
    pthread_mutex_init(&mutex, NULL);

    pthread_create(&prod, NULL, producer, NULL);
    pthread_create(&cons, NULL, consumer, NULL);

    pthread_join(prod, NULL);
    pthread_join(cons, NULL);

    sem_destroy(&empty);
    sem_destroy(&full);
    pthread_mutex_destroy(&mutex);

    return 0;
}
